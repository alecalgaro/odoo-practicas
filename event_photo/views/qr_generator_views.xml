<odoo>
    <data>
        <!-- Form view -->
        <record id="view_qr_generator_form" model="ir.ui.view">
            <field name="name">qr.generator.form</field>
            <field name="model">qr.generator</field>
            <field name="arch" type="xml">
                <form string="QR">
                    <header>
                        <button name="generate_qr_code" type="object" string="Generar QR" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="url"/>
                            <field name="qr_code" widget="image" options="{'size': [200, 200]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="view_qr_generator_tree" model="ir.ui.view">
            <field name="name">qr.generator.tree</field>
            <field name="model">qr.generator</field>
            <field name="arch" type="xml">
                <tree string="Generador de QR">
                    <field name="url"/>
                    <field name="qr_code" widget="image" options="{'size': [100, 100]}"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_qr_generator" model="ir.actions.act_window">
            <field name="name">Generador de QR</field>
            <field name="res_model">qr.generator</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_root" name="GestiÃ³n de eventos" sequence="1"/>
        <menuitem id="menu_qr_generator" name="QR" parent="menu_root" action="action_qr_generator"/>
    </data>
</odoo>